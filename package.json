{
  "name": "geckorave-payment-sdk",
  "version": "1.0.7",
  "description": "This is an reactJS library for implementing Geckorave payment gateway.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "tsup",
    "build:css": "npx tailwindcss -i ./src/tailwind.css -o ./dist/index.css --minify",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier -w .",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "tailwindcss": ">=3"
  },
  "dependencies": {
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/geckorave/payment-gateway-ui.git"
  },
  "keywords": [
    "react",
    "payment",
    "checkout",
    "bank transfer",
    "card payment",
    "modal",
    "geckorave",
    "SDK",
    "Fintech",
    "Nigeria"
  ],
   "author": "Ayodeji Oke"
}
